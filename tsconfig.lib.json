{
  "extends": ["./tsconfig.paths.json"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "bundler",
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "libs",
    "types": ["vite/client"]
  },
  "include": ["libs/**/*"],
  "exclude": ["libs/**/*.test.ts", "node_modules/**", "dist/**"],
  "references": [{ "path": "./libs/components" }, { "path": "./libs/utils" }]
}
