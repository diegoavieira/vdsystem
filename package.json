{
  "name": "vdsystem",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "src/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "test": "vitest --watch=false",
    "test:watch": "vitest",
    "test:libs": "vitest --project=libs --watch=false",
    "test:app": "vitest --project=app --watch=false",
    "test:coverage": "vitest run --coverage",
    "build:components": "cross-env LIB_NAME=components vite build --config vite.lib.config.ts",
    "build:utils": "cross-env LIB_NAME=utils vite build --config vite.lib.config.ts",
    "build:libs": "run-s build:components build:utils",
    "build:app": "run-s build copy:docs",
    "prepare": "husky",
    "commit": "czg",
    "release": "lerna version"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@commitlint/types": "^20.4.0",
    "@eslint/js": "^9.39.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.18",
    "cross-env": "^10.1.0",
    "czg": "^1.12.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lerna": "^9.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.1",
    "pretty-quick": "^4.2.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-static-copy": "^3.2.0",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  }
}
